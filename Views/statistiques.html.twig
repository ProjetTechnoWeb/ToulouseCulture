{% extends "index.html.twig" %}

{% block section %}

	<script src="../Javascript/formStats.js" type="text/javascript"></script>
	<div id="formulaireStats">
		<form method="post">
			<h2>Statistiques</h2>
			<fieldset>
				<legend><strong>Quartiers</strong></legend>
				<label>Sélectionnez un ou plusieurs quartiers : </label>
				<select id="selectQuartierStat">
					<option value="0">Sélection de quartier</option>
					<option value="1">Quartier 1</option>
					<option value="2">Quartier 2</option>
					<option value="3">Quartier 3</option>
					<option value="4">Tous les quartiers</option>
				</select>
				<div id="selection"></div> <!-- Futur emplacement des tags -->
			</fieldset>

			<fieldset>
				<legend><strong>Catégories</strong></legend>
				<label>Nombre de salles de : </label>
				<select>
					<option>Type de salle</option>
				</select><br/>

				<label>En fonction de : </label>
				<select>
					<option>Population totale</option>
				</select>
			</fieldset>

			<fieldset>
				<legend><strong>Types de graphiques</strong></legend>
				<label>Sélectionnez maintenant le type de graphique souhaité : </label>
				<p> Futur liste d'images </p>
			</fieldset>
		<input type="submit" value="Valider">
		</form>
	</div>


	<div id="placeStats">
	<p>Ici viendront les statistiques</p>
	</div>
	
{% endblock %}